{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./types"]
  },
  "include": [
    "./types/button.d.ts",
    "types/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "styling/globalStyles.ts"
  ],
  "exclude": ["node_modules"]
}
